@model DAWebPhone.Models.AdminUser

@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/changeImg.js"></script>



@using (Html.BeginForm("EditProfile", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>AdminUser</h4>
        <hr />
        <p class="text-danger">
            @ViewBag.Error
        </p>
        <div class="form-group">
            <div class="col-md-10">
                <img src="@Url.Content(Model.AdmAvatar)" height="150" width="150" id="previewImg" />
                CHỌN ẢNH MỚI
                <input type="file" name="UploadImage" onchange="ChImg(this,document.getElementById('previewImg')) " />
            </div>
        </div>
        @Html.HiddenFor(model => model.AdmID)
        @Html.HiddenFor(model => model.AdmLogName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.AdmPass, new { htmlAttributes = new { @class = "form-control" } })


        <div class="form-group">
            @Html.LabelFor(model => model.AdmName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdmName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdmName, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.AdmRole, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>




        <div class="form-group">
            @Html.LabelFor(model => model.AdmEmail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdmEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdmEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdmPhone, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdmPhone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdmPhone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdmGender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdmGender, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdmGender, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdmBirth, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdmBirth, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdmBirth, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdmAddress, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdmAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdmAddress, "", new { @class = "text-danger" })
            </div>
        </div>




        <div class="form-group">
            <label>Nhập mật khẩu để xác nhận</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ConfirmPass, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        @Html.HiddenFor(model => model.AdmStatus, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.AdmActive, new { htmlAttributes = new { @class = "form-control" } })



        @Html.HiddenFor(model => model.AdmCreDate, new { htmlAttributes = new { @class = "form-control" } })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}
