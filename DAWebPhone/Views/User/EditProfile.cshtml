@model DAWebPhone.Models.Customer

@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<script src="~/Scripts/changeImg.js"></script>



@using (Html.BeginForm("EditProfile", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-4">
                    <div style="padding-top:40px">
                        <img src="@Url.Content(Model.CusAvatar)"  width="100%" id="previewImg" />
                        <input type="file" name="UploadImage" onchange="ChImg(this,document.getElementById('previewImg')) " />
                    </div>
                </div>
                <div class="col-12 col-md-8" >
                    <p class="text-danger">@ViewBag.Error</p>
                    @Html.HiddenFor(model => model.CusID)
                    @Html.HiddenFor(model => model.CusLogName, new { htmlAttributes = new { @class = "form-control" } })

                    <div class="form-group">
                        @Html.LabelFor(model => model.CusName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CusName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CusName, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.VIP, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>




                    <div class="form-group">
                        @Html.LabelFor(model => model.CusEmail, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CusEmail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CusEmail, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CusPhone, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CusPhone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CusPhone, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CusGender, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CusGender, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CusGender, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CusBirth, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CusBirth, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CusBirth, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CusAddress, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CusAddress, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CusAddress, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CusPass, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CusPass, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Xác nhận mật khẩu</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ConfirmPass, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ConfirmPass, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @Html.HiddenFor(model => model.CusStatus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.CusActive, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.CusCreDate, new { htmlAttributes = new { @class = "form-control" } })

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <br />
                            <input type="submit" value="Xác nhận thay đổi" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}
